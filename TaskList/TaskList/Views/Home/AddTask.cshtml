@using TaskList.Models;
@model Task
<p>
    <h3 class="text-success">Новая задача</h3>
</p>

<Form method="post" action="/Home/AddTask">
    <div class="form-group">
        <label for="nameId" class="text-primary">Название</label>
        @if (Model == null)
        {
            <input class="form-control" name="Name" id="nameId" aria-describedby="nameHelp">
        }
        else
        {
            <input class="form-control" name="Name" value="@Model.Name" id="nameId" aria-describedby="nameHelp">
        }
        <small id="nameHelp" class="form-text text-muted">Введите название задачи(max 50 симв, обяз.ввод)</small>
        @if (Model != null) { 
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Name)</p>
        }
    </div>
    <div class="form-group">
        <label for="descriptionId" class="text-primary">Описание</label>
        @if (Model == null)
        {
            <input class="form-control" name="Description" id="descriptionId" aria-describedby="descriptionHelp">
        }
        else
        {
            <input class="form-control" name="Description" value="@Model.Description" id="descriptionId" aria-describedby="descriptionHelp">
        }
        <small id="nameHelp" class="form-text text-muted">Введите описание задачи(обяз.ввод)</small>
        @if (Model != null)
        {
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Description)</p>
        }
    </div>
    <button class="btn-primary btn-lg" type="submit">Добавить</button>
</Form>